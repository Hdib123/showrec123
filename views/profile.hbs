<head>
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body class="main">
  <main>
<div class="glass">
<h1>{{user.username}}</h1>
<form action="/profile/{{user._id}}/deleteUser" method="POST">

  <button type="submit">Delete account</button>
</form>

<div class="cards">
<h2 class="listtype">Favorite Shows</h2>
<a class="card">{{#each user.favoriteShows}}
<img class="listpic" src="{{this.mainPic}}"/><h2 class="name">{{this.name}}</h2><form action="/profile/{{this._id}}/removeFromFavorites" method="POST">

  <button type="submit">Remove</button>
</form>

{{/each}}</a>

<h2 class="listtype">Viewed Shows</h2>
<a class="card">
{{#each user.viewedShows}}
<img class="listpic" src="{{this.mainPic}}"/><h2 class="name">{{this.name}}</h2><form action="/profile/{{this._id}}/removeFromViewed" method="POST">
  <button class="testtest" type="submit">Remove</button>
</form>

{{/each}}</a>

<h2 class="listtype">Plan to Watch</h2>
<a class="card">
{{#each user.planToWatch}}
<img class="listpic" src="{{this.mainPic}}"/><h2 class="name">{{this.name}}</h2><form action="/profile/{{this._id}}/removeFromPlanToWatch" method="POST">
  <button type="submit">Remove</button>
</form>

{{/each}}</a>

</div></div></body>
</main>
