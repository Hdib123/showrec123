<form action="/auth/signup" method="POST">
   <label> Email
      <input type="email" name="email">
   </label>
   <label> Username
      <input type="text" name="username">
   </label>
   <label> Password
      <input type="password" name="password">
   </label>

   <button type="submit">Submit</button>

   {{#if errorMessage}}
   <h1 style="color: red;">{{errorMessage}}</h1>
   {{/if}}

</form>